<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AppInformation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/rl_msg_toolbar"
        android:background="@drawable/appbg">

        <android.support.v7.widget.Toolbar
            android:id="@+id/Favorite_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:titleTextColor="@color/colorAccent">

            <TextView
                android:id="@+id/tv_Favorite_toolbar_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How to Use"
                android:textColor="@color/colorAccent"
                android:textSize="25dp"
                android:textStyle="bold" />
        </android.support.v7.widget.Toolbar>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardBackgroundColor="@android:color/transparent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:text="Why you choice this App? \n \n This App is use for send message to unknown What'sApp Number and any Country no need to save temporary contact number to contact list for send Whatsapp message. \n\nJust type the phone number that you would like to send a what'sApp meassage to and this App will open a What'sApp and start conversation with that phone number. \n\n This app is very easy to use. \n\n Thank you!!!! "/>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</LinearLayout>